-- enemy

function add_enemy(x,y,sprite)
	sspr(sprite.sx,sprite.sy,sprite.sw,sprite.sh,x,y,8,8)
end

function spawn_enemy(level)
	x_cor=6
	y_cor=16
	for i=1,level.num_enemy do
		if (i>1 and i%10==1) then
			x_cor=6
			y_cor+=12
		end
		add_enemy(x_cor,y_cor,enemy_sprite)
		x_cor+=12
	end
end
