-- update

function _update()
 //checks for input and screen border
	//offset of 1 for sprite size
	if btn(⬅️) and x > 0+1 then
		x -= 3
	end
	
	//checks for input and screen border
	//offset of 16 for sprite size
	if btn(➡️) and x < 128-16 then
		x += 3
	end
end
