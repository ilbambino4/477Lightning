-- init
function _init()
 //sets initial position to center
 //of the screen
 //offset by 6 for sprite size
 x=64-8
 
 //define enemy sprite
 enemy_sprite = {
 	sx=0,
 	sy=32,
 	sw=16,
 	sh=16
 }
 
end



